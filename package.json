{
  "name": "yarn_run_practice04",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:JUNKI555/yarn_run_practice04.git",
  "author": "JUNKI555 <junki555@gmail.com>",
  "license": "WTFPL License",
  "scripts": {
    "cleanjs": "rimraf ./public/js/",
    "cleancss": "rimraf ./public/css/",
    "clean": "run-s cleanjs cleancss copyumbrella",
    "postcss": "postcss src/**/*.css -d ./public/css",
    "watchpostcss": "postcss src/**/*.css -d ./public/css --watch",
    "copyumbrella": "cpy node_modules/umbrellajs/umbrella.esm.js public/js/ --rename=umbrella.js",
    "ttsc": "ttsc",
    "watchts": "ttsc --watch",
    "replacehls": "replace 'import Hls from \"hls.js\";' '' ./public/js/video.js",
    "replacemap": "replace '//# sourceMappingURL=video.js.map' '' ./public/js/video.js",
    "cleanwatch": "run-p clean watchpostcss watchts",
    "serve": "sirv public --port 8080",
    "build": "run-s cleanjs cleancss copyumbrella postcss ttsc",
    "dev": "run-p cleanwatch serve"
  },
  "devDependencies": {
    "@types/hls.js": "^0.13.3",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "cpy-cli": "^3.1.1",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.2.0",
    "postcss-import": "^13.0.0",
    "postcss-nested": "^5.0.1",
    "replace": "^1.2.0",
    "rimraf": "^3.0.2",
    "sirv-cli": "^1.0.8",
    "tailwindcss": "^1.9.6",
    "ts-transform-import-path-rewrite": "^0.3.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.5",
    "umbrellajs": "^3.2.3",
    "yarn-run-all": "^3.1.1"
  }
}
